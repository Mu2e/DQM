#!/usr/bin/env bash
#
# bash script to run crv_extractor.py
#
#  DJT - Mar 2025
#
#---------------------------------
function usage {
    echo "Usage: $0 [-h] [-i] <RootFile>"
    echo "-h: Display this help message"
    echo "-i: Insert vaules into DQM-db"
}
script_path="$(dirname "$0")"
if [ $script_path == "." ]; then
    script_path=`pwd`
fi
python_path=`echo $script_path | sed s/bin/python/`
insert=false
#
while getopts "hi" opt; do
    case $opt in
        h)
            usage
            exit 0
            ;;
        i)
            insert=true
            ;;
    esac
done
shift $((OPTIND-1))
if $insert; then
    python $python_path/crvwb_extractor.py --insert $1
else
    python $python_path/crvwb_extractor.py $1
fi
